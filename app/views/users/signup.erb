<h3> Sign Up </h3>
<% if @errors %>
    <% @errors.each do |e| %>
        <%= e %><br>
    <% end %>
<% end %>

<form method="POST" action="/users/signup">
Username: <input type="text" name="user[username]" required><br>
Email: <input type="email" name="user[email]" required ><br>
Password: <input type="password" name="user[password]" required>
<input type="submit" value="Create Account">
</form>
<h3> <a href="/">Home</a> </h3>