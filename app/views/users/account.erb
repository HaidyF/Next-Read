<h2>Hi, <%= @user.username %>!
<br>
<%= @user.email%></h2>

<table>
  <tr>
    <th>Your Books:</th>
  </tr>
<table border="1">
<thead>
    <th>Name</th>
    <th>Review</th>
    <th>Rating</th>
</thead>
  <% @books.each do |book| %>
  <% if book.user_id == current_user.id%>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.review %></td>
       <td><%= book.rating %></td>
      <td> <h2><a href="/books/<%=book.id%>/edit">Edit or Delete</a></h2> </td>
    </tr>
    <%end%>
  <% end %>
 
</table>
<br>
<br>
